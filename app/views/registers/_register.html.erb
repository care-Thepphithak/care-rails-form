<%# this is to display all data from @registers in controller %>
<div id="<%= dom_id register %>">
  <p>
    <strong>First name:</strong>
    <%= register.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= register.last_name %>
  </p>

  <p>
    <strong>Birth date:</strong>
    <%= register.b_date %>
  </p>

  <p>
    <strong>Gender:</strong>
    <%= register.gender %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= register.email.empty? ? "-" : register.email%>
  </p>

  <p>
    <strong>Phone num:</strong>
    <%= register.phone_num %>
  </p>

  <p>
    <strong>Subject:</strong>
    <%= register.subject %>
  </p>

</div>
